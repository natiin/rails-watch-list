 <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
 url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>');">
    <div class="container">
      <h1><%= @list.name.upcase%></h1>
      <p><%= link_to "add new bookmark", new_list_bookmark_path(@list), class: "btn btn-primary"%></p>
    </div>
  </div>

<div class="container m-auto d-flex flex-wrap justify-content-between">

  <% @bookmarks.each do |bookmark| %>
    <div class="card" style="width: 20rem; height: 20px;">
      <img src="<%= bookmark.movie.poster_url%>" class="card-img-top" alt="movie photo">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title%></h5>
        <p class="card-text"><%= bookmark.movie.overview%></p>
        <p class="card-text"><%= bookmark.movie.rating%></p>
        <p class="card-text"><%= bookmark.comment%></p>
        <%= link_to "Delete bookmark",
                list_bookmark_path(@list.id, bookmark.id),
                method: :delete,
                data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
      </div>
  </div>
  <% end %>
</div>
